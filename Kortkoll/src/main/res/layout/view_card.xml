<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardlarge"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="32dp"
        android:clipToPadding="false">

        <ImageView
            android:src="@drawable/logo_animation_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="BLÅ KORTET"
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="Henrik Sandström"
            android:id="@+id/cardOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="12dp"
            android:textColor="@android:color/white"/>


        <LinearLayout
            android:id="@+id/cardProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/card_dashes_horizontal"
            android:layout_marginTop="8dp"
            android:layerType="software"/>

        <TextView
            android:text="25 kr"
            android:id="@+id/cardValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="65dp"/>

        <TextView
            android:text="RESKASSA"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>
